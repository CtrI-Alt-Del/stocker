generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum InventoryMovementType {
  INBOUND
  OUTBOUND
}

model Product {
  id            String  @id @default(uuid())
  name          String
  description   String
  image         String
  cost_price    Int
  selling_price Int
  brand         String
  height        Int
  length        Int
  weight        Int
  width         Int
  uom           String
  code          String
  minimum_stock Int
  is_active     Boolean @default(true)
  category_id   String?
  company_id    String

  Category           Category?           @relation(fields: [category_id], references: [id])
  Company            Company             @relation(fields: [company_id], references: [id])
  batches            Batch[]
  InventoryMovements InventoryMovement[]
  notification       Notification[]

  @@map("products")
}

model Batch {
  id              String   @id @default(uuid())
  code            String
  expiration_date DateTime
  items_count     Int
  product_id      String

  Product      Product        @relation(fields: [product_id], references: [id])
  notification Notification[] @relation(name: "BatcheToNotification")

  @@map("batches")
}

model InventoryMovement {
  id            String                @id @default(uuid())
  type          InventoryMovementType @default(INBOUND)
  items_count   Int
  product_id    String
  user_id       String
  registered_at DateTime

  Product Product @relation(fields: [product_id], references: [id])
  User    User    @relation(fields: [user_id], references: [id])

  @@map("inventory_movements")
}

model User {
  id         String   @id @default(uuid())
  email      String
  role       UserRole @default(EMPLOYEE)
  name       String
  company_id String?

  Company            Company?            @relation(fields: [company_id], references: [id])
  inventoryMovements InventoryMovement[]

  @@map("users")
}

model Company {
  id   String @id @default(uuid())
  name String

  users      User[]
  product    Product[]
  location   Location[]
  suppliers  Suppliers[]
  categories Category[]

  @@map("companies")
}

model Category {
  id                 String  @id @default(uuid())
  name               String
  parent_category_id String?
  company_id         String

  parentCategory Category?  @relation("CategoryParent", fields: [parent_category_id], references: [id])
  subCategories  Category[] @relation("CategoryParent")
  product        Product[]
  company        Company    @relation(fields: [company_id], references: [id])

  @@map("categories")
}

model Suppliers {
  id         String @id @default(uuid())
  name       String
  email      String
  company_id String

  Company Company @relation(fields: [company_id], references: [id])

  @@map("suppliers")
}

model Location {
  id                 String  @id @default(uuid())
  parent_location_id String?
  company_id         String

  ParentLocation Location?  @relation("LocationParent", fields: [parent_location_id], references: [id], onDelete: Cascade)
  subLocation    Location[] @relation("LocationParent")
  Company        Company    @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@map("locations")
}

model Notification {
  id         String   @id @default(uuid())
  product_id String?
  batch_id   String?
  created_at DateTime @default(now())

  Product Product? @relation(fields: [product_id], references: [id])
  Batch   Batch?   @relation(name: "BatcheToNotification", fields: [batch_id], references: [id])

  @@map("notifications")
}
